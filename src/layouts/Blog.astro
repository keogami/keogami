---
import Common from "@layouts/Common.astro";
import BlogNav from "@components/BlogNav.astro";
import PostSummary, {
  type Props as PostProps,
} from "@components/PostSummary.astro";

const { blog } = Astro.props;

export interface Props {
  blog: PostProps["post"][];
}
---

<style>
  nav {
    display: flex;
    justify-content: center;
    margin-bottom: 4rem;
  }

  nav a {
    font-family: "Fira Code", monospace;
    color: var(--black-base);
    text-decoration: none;
    font-size: 3rem;
  }

  body {
    font-family: "Fira Code", monospace;
    display: grid;
    padding-top: 3rem;
    padding-bottom: 3rem;
  }

  main {
    margin: 0px 18vw;
  }

  header {
    margin-bottom: 3rem;
  }
</style>

<Common title="Blog">
  <BlogNav />
  <main>
    <header>
      <slot name="header" />
    </header>

    <div class="flex flex-col gap-10">
      {
        blog.map((post) => {
          return <PostSummary {post} />;
        })
      }
    </div>
  </main>
</Common>
